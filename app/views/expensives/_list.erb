<div id="container-expensive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= filterrific_sorting_link(@filterrific, :amount) %></th>
      <th><%= filterrific_sorting_link(@filterrific, :logdate) %></th>
      <th><%= filterrific_sorting_link(@filterrific, :note) %></th>
      <th>Category</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @expensives.each do |expensive| %>
        <tr>
          <td><%= number_to_currency(expensive.amount) %></td>
          <td><%= expensive.logdate.try(:strftime, '%m-%d-%Y') %></td>
          <td><%= expensive.note %></td>
          <td><%= expensive.category %></td>
          <td><%= expensive.subcategory %></td>
          <td>
            <a href="<%= expensife_path(expensive) %>" class="btn btn-info" role="button">
              <i class="fa fa-info" aria-hidden="true"></i></a>
          <td>
            <a href="<%= edit_expensife_path(expensive) %>" class="btn btn-success" role="button">
              <i class="fa fa-pencil" aria-hidden="true"></i></a>
          </td>
          <td>
            <a href="#" class="btn btn-danger js-delete-expense" role="button"
              data-message="Are you sure to delete this log: $ <%= expensive.amount %>"
              data-id="<%= expensive.id %>"><i class="fa fa-trash" aria-hidden="true"></i></a>

          </td>
        </tr>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="4"><%= paginate @expensives, remote: true %></td>
      <td colspan="4" class="text-right"><%= page_entries_info @expensives, entry_name: 'item' %></td>
    </tr>
    </tfoot>
  </table>
</div>